<UserControl
    x:Class="Beeffective.Presentation.Main.Priority.PriorityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Beeffective.Presentation.Main.Priority"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Themes/Generic.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="16,32,8,16">
            <TextBlock
                FontSize="{StaticResource HeaderFontSize}"
                Foreground="{StaticResource PrimaryHueMidBrush}"
                Text="Importance" />
            <ListView
                x:Name="ImportanceListView"
                AllowDrop="True"
                DragEnter="ImportanceListView_OnDragEnter"
                Drop="ImportanceListView_OnDrop"
                ItemsSource="{Binding Tasks}"
                PreviewMouseLeftButtonDown="ListView_OnPreviewMouseLeftButtonDown"
                PreviewMouseMove="ListView_OnPreviewMouseMove">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Title" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

    </Grid>
</UserControl>
