<Window
    x:Class="Beeffective.Presentation.AlwaysOnTop.AlwaysOnTopWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="AlwaysOnTopWindow"
    Width="400"
    Height="25"
    AllowsTransparency="True"
    Background="Transparent"
    Left="1200"
    MouseMove="AlwaysOnTopWindow_OnMouseMove"
    ResizeMode="NoResize"
    Top="0"
    Topmost="True"
    WindowStartupLocation="Manual"
    WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Height="23">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource MaterialDesignPaper}"
            Opacity="0.75" />

        <Button
            Grid.Column="0"
            Width="20"
            Height="20"
            Margin="2"
            Padding="0"
            Command="{Binding TimeTrackerCommand}">
            <md:PackIcon Width="16" Height="16">
                <md:PackIcon.Style>
                    <Style TargetType="md:PackIcon">
                        <Setter Property="Kind" Value="Play" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Tasks.Selected.Model.IsTimerEnabled}" Value="True">
                                <Setter Property="Kind" Value="Stop" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </md:PackIcon.Style>
            </md:PackIcon>
        </Button>

        <StackPanel
            Grid.Column="1"
            Height="20"
            Margin="4,0"
            md:ButtonProgressAssist.IndicatorForeground="{StaticResource MaterialDesignCardBackground}"
            md:ButtonProgressAssist.IsIndeterminate="True"
            md:ButtonProgressAssist.IsIndicatorVisible="{Binding Tasks.Selected.Model.IsTimerEnabled}"
            md:ButtonProgressAssist.Opacity="0.25"
            md:ButtonProgressAssist.Value="-1"
            Orientation="Horizontal"
            TextElement.FontFamily="{StaticResource MaterialDesignFont}"
            TextElement.FontSize="16"
            TextElement.Foreground="{StaticResource MaterialDesignBody}">
            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="{Binding Tasks.Selected.Model.Title}" />
            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="{Binding Tasks.Selected.Model.TimeSpent, StringFormat=({0}), Converter={StaticResource TimeSpanConverter}}" />
        </StackPanel>

    </Grid>

</Window>
